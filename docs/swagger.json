{
    "openapi": "3.0.0",
    "info": {
        "title": "API para o Departamento de Polícia",
        "description": "Essa é uma API de um departamento de polícia que permite o gerenciamento de agentes e casos policiais fictícios, com validações, tratamento de erros e dados armazenados em memória (utilizando arrays).",
        "version": "1.0.0",
        "contact": {
            "name": "Helena Edim",
            "email": "edimhelenaguimaraes@gmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor local (Node/Express)"
        }
    ],
    "paths": {
        "/casos": {
            "get": {
                "summary": "Retorna todos os casos",
                "tags": [
                    "Casos"
                ],
                "responses": {
                    "200": {
                        "description": "Retorna todos os casos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Caso"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Cria um caso",
                "tags": [
                    "Casos"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Caso"
                            },
                            "examples": {
                                "caso": {
                                    "value": {
                                        "titulo": "Caso 1",
                                        "descricao": "Descrição do caso 1",
                                        "status": "aberto",
                                        "agente_id": "1"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Caso criado com sucesso"
                    },
                    "400": {
                        "description": "Dados incorretos ou incompletos"
                    },
                    "404": {
                        "description": "Id do agente não encontrado"
                    }
                }
            }
        },
        "/casos/{id}": {
            "get": {
                "summary": "Retorna o caso com o determinado ID",
                "tags": [
                    "Casos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Caso retornado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Caso"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Caso não encontrado"
                    }
                }
            },
            "put": {
                "summary": "Atualiza completamente um caso de acordo com o id passado na rota",
                "tags": [
                    "Casos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Caso"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Caso atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Caso"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Dados incorretos ou incompletos"
                    },
                    "404": {
                        "description": "Caso ou agente não encontrado"
                    }
                }
            },
            "patch": {
                "summary": "Atualiza parcialmente um caso",
                "tags": [
                    "Casos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "titulo": {
                                        "type": "string"
                                    },
                                    "descricao": {
                                        "type": "string"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "aberto",
                                            "solucionado"
                                        ]
                                    },
                                    "agente_id": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "atualizar_status": {
                                    "summary": "Atualizar apenas o status",
                                    "value": {
                                        "status": "solucionado"
                                    }
                                },
                                "atualizar_titulo_e_descricao": {
                                    "summary": "Atualizar título e descrição",
                                    "value": {
                                        "titulo": "Novo título",
                                        "descricao": "Nova descrição do caso"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Caso atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Caso"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida"
                    },
                    "404": {
                        "description": "Caso ou agente não encontrado"
                    }
                }
            },
            "delete": {
                "summary": "Deleta caso",
                "tags": [
                    "Casos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Caso deletado com sucesso"
                    },
                    "404": {
                        "description": "Caso não encontrado"
                    }
                }
            }
        },
        "/casos/agente": {
            "get": {
                "summary": "Retorna casos por agente",
                "tags": [
                    "Casos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Casos do agente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Caso"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Esse agente não possui nenhum caso registrado"
                    }
                }
            }
        },
        "/casos/status": {
            "get": {
                "summary": "Busca casos pelo status",
                "description": "Retorna todos os casos que possuem o status informado",
                "tags": [
                    "Casos"
                ],
                "parameters": [
                    {
                        "name": "status",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "aberto",
                                "solucionado"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Casos filtrados por status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Caso"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Status inválido"
                    }
                }
            }
        },
        "/agentes": {
            "get": {
                "summary": "Retorna todos os agentes",
                "tags": [
                    "Agentes"
                ],
                "responses": {
                    "200": {
                        "description": "Retorna todos os agentes",
                        "content": {
                            "application/json": {
                                "type": "array",
                                "example": [
                                    {
                                        "id": "401bccf5-cf9e-489d-8412-446cd169a0f1",
                                        "nome": "Agente 1",
                                        "dataDeIncorporacao": "1992-10-04",
                                        "cargo": "delegado"
                                    },
                                    {
                                        "id": "401bccf5-cf9e-489d-8412-446cd169a0f2",
                                        "nome": "Agente 2",
                                        "dataDeIncorporacao": "2000-12-03",
                                        "cargo": "policial"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Cria um agente",
                "tags": [
                    "Agentes"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Agente"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Agente criado com sucesso"
                    },
                    "400": {
                        "description": "Dados incorretos ou incompletos"
                    }
                }
            }
        },
        "/agentes/{id}": {
            "get": {
                "summary": "Retorna o agente com o determinado ID",
                "tags": [
                    "Agentes"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Agente retornado com sucesso",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "id": "401bccf5-cf9e-489d-8412-446cd169a0f1",
                                    "nome": "Agente 1",
                                    "dataDeIncorporacao": "1992-10-04",
                                    "cargo": "delegado"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Agente não encontrado"
                    }
                }
            },
            "put": {
                "summary": "Atualiza completamente um agente de acordo com o id passado na rota",
                "tags": [
                    "Agentes"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Agente"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Agente atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "id": "401bccf5-cf9e-489d-8412-446cd169a0f1",
                                    "nome": "Agente 1 atualizado",
                                    "dataDeIncorporacao": "1992-10-03",
                                    "cargo": "policial"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Dados incorretos ou incompletos"
                    },
                    "404": {
                        "description": "Caso ou agente não encontrado"
                    }
                }
            },
            "patch": {
                "summary": "Atualiza parcialmente um agente",
                "tags": [
                    "Agentes"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "dataDeIncorporacao": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "cargo": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "atualizar_nome": {
                                    "summary": "Atualizar apenas o nome",
                                    "value": {
                                        "nome": "Novo nome"
                                    }
                                },
                                "atualizar_data_e_cargo": {
                                    "summary": "Atualizar data de incorporação e cargo",
                                    "value": {
                                        "dataDeIncorporacao": "Nova data (formato YYYY-MM-DD)",
                                        "cargo": "Novo cargo do agente"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Agente atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "id": "401bccf5-cf9e-489d-8412-446cd169a0f1",
                                    "nome": "Agente 1 atualizado",
                                    "dataDeIncorporacao": "1992-10-03",
                                    "cargo": "policial"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida"
                    },
                    "404": {
                        "description": "Agente não encontrado"
                    }
                }
            },
            "delete": {
                "summary": "Deleta agente",
                "tags": [
                    "Agentes"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Agente deletado com sucesso"
                    },
                    "404": {
                        "description": "Agente não encontrado"
                    }
                }
            }
        },
        "/docs-swagger": {
            "get": {
                "summary": "Retorna a documentação da API",
                "tags": [
                    "Documentação"
                ],
                "responses": {
                    "200": {
                        "description": "Retorna a documentação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Caso": {
                "type": "object",
                "required": [
                    "titulo",
                    "descricao",
                    "status",
                    "agente_id"
                ],
                "properties": {
                    "titulo": {
                        "type": "string"
                    },
                    "descricao": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "aberto",
                            "solucionado"
                        ]
                    },
                    "agente_id": {
                        "type": "string",
                        "format": "uuid"
                    }
                }
            },
            "Agente": {
                "type": "object",
                "required": [
                    "nome",
                    "dataDeIncorporacao",
                    "cargo"
                ],
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "dataDeIncorporacao": {
                        "type": "string",
                        "format": "date"
                    },
                    "cargo": {
                        "type": "string"
                    }
                }
            }
        }
    }
}